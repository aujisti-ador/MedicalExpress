<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:elevation="@dimen/cardview_compat_inset_shadow"
    android:fadingEdgeLength="@dimen/cardview_compat_inset_shadow"
    android:padding="3dp"
    android:background="#B2DFDB"
    android:layout_height="70dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <TextView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="Fazle Rabbi Ador"
        android:textSize="14dp"
        android:textColor="#000000"
        android:padding="3dp"
        android:id="@+id/tvName"
        android:textAlignment="center"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:text="AB+"
        android:padding="3dp"
        android:textColor="#9e0707"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/tvBloodGrp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:text="Dhanmondi,Dhaka"
        android:padding="3dp"
        android:textAlignment="center"
        android:textSize="13dp"
        android:id="@+id/tvPlace"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:text="01521101414"
        android:textSize="15dp"
        android:textColor="#000000"
        android:padding="3dp"
        android:textAlignment="center"
        android:id="@+id/tvContact"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="06/05/2017"
        android:textSize="12dp"
        android:padding="3dp"
        android:id="@+id/tvDate"
        android:textAlignment="center"
        android:layout_weight="1"/>


</LinearLayout>